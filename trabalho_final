    }else{
        cout << "GG indisponivel" << endl;
    }

    cout << "Opcoes extras: " << endl;
    if(Calca1.estampada == true){
        cout << "estampada disponivel" << endl;
    }else{
        cout << "estampada indisponivel" << endl;
    }
}

