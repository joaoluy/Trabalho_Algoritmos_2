int compra(){
    system("clear||cls");

    cout << "Compra realizada com sucesso" << endl;
    cout << "obrigado por visitar a 4 ootd's";
        Sleep(3000);
        return 0;
}

void catalogoCamiseta(){
    string cor;
    string tamanho;
    int estampa;
    system("clear||cls");
    cout << "Catalogo:" << endl;
    cout << "Camisetas disponiveis:" << endl;

    Camisetas Camiseta1;
    Camiseta1.cor = "azul";
    Camiseta1.tamanhos.P = true;
    Camiseta1.tamanhos.M = true;
    Camiseta1.tamanhos.G = true;
    Camiseta1.tamanhos.GG = true;
    Camiseta1.estampada = true;
    Camiseta1.preco = 50;
    mostracamiseta(Camiseta1);
    
    Camisetas Camiseta2;
    Camiseta2.cor = "preta";
    Camiseta2.tamanhos.P = true;
    Camiseta2.tamanhos.M = true;
    Camiseta2.tamanhos.G = false;
    Camiseta2.tamanhos.GG = true;
    Camiseta2.estampada = false;
    Camiseta2.preco = 40;
    mostracamiseta(Camiseta2);

    cout << "Qual cor desejaria?" << endl;
    cin >> cor;
    if(cor == "azul"){
        system("clear||cls");
        mostracamiseta(Camiseta1);
    cout << "Qual tamanho?" << endl;
    cin >> tamanho;
        if(tamanho == "p"){
            if(Camiseta1.tamanhos.P == true){
            system("clear||cls");
            cout << "p selecionado" << endl;
            } else{
                cout << "Tamanho invalido" << endl;
                catalogoCamiseta();
            }
    }else if(tamanho == "m"){
            if(Camiseta1.tamanhos.M == true){
            system("clear||cls");
            cout << "m selecionado" << endl;
            } else{
                cout << "Tamanho invalido" << endl;
                catalogoCamiseta();
            }
    }else if(tamanho == "g"){
            if(Camiseta1.tamanhos.G == true){
            system("clear||cls");
            cout << "g selecionado" << endl;
            } else{
                cout << "Tamanho invalido" << endl;
                catalogoCamiseta();
            }
    }else if(tamanho == "gg"){
            if(Camiseta1.tamanhos.GG == true){
            system("clear||cls");
            cout << "gg selecionado" << endl;
            } else{
                cout << "Tamanho invalido" << endl;
                catalogoCamiseta();
            }
    }

    cout << "Estampado?" << endl;
    cout << "1. SIM" << endl;
    cout << "2. NAO" << endl;
    cin >> estampa;
    compra();

    }else if(cor == "preta"){
        system("clear||cls");
        mostracamiseta(Camiseta2);
        cout << "Qual tamanho?" << endl;
        cin >> tamanho;
                if(tamanho == "p"){
                    if(Camiseta2.tamanhos.P == true){
                    system("clear||cls");
                    cout << "p selecionado" << endl;
                    } else{
                        cout << "Tamanho invalido" << endl;
                        catalogoCamiseta();
                    }
            }else if(tamanho == "m"){
                    if(Camiseta2.tamanhos.M == true){
                    system("clear||cls");
                    cout << "m selecionado" << endl;
                    } else{
                        cout << "Tamanho invalido" << endl;
                        catalogoCamiseta();
                    }
            }else if(tamanho == "g"){
                    if(Camiseta2.tamanhos.G == true){
                    system("clear||cls");
                    cout << "g selecionado" << endl;
                    } else{
                        cout << "Tamanho invalido" << endl;
                        catalogoCamiseta();
                    }
            }else if(tamanho == "gg"){
                    if(Camiseta2.tamanhos.GG == true){
                    system("clear||cls");
                    cout << "gg selecionado" << endl;
                    } else{
                        cout << "Tamanho invalido" << endl;
                        catalogoCamiseta();
                    }
            }
        }else{
            cout << "Cor indisponivel, digite outra:" << endl;
            catalogoCamiseta();
        }
    compra();
}

