int catalogo(){
    int escolha;
    system("clear||cls");
    cout << "Qual item deseja comprar?" << endl;
    cout << "1. Camiseta" << endl;
    cout << "2. Calca" << endl;
    cout << "3. Calcao" << endl;
    cin >> escolha;
    if(escolha == 1){
        catalogoCamiseta();
    }else if(escolha == 2){
        catalogoCalcas();
    }else if(escolha == 3){
        catalogoCalcao();
    }else{
        cout << "Caractere invÃ¡lido, tente novamente:" << endl;
    }
}

int buscar(){
    int cores = 6;
    string v[cores];
    string n;
    v[0] = "amarelo";
    v[1] = "preto";
    v[2] = "vermelho";
    v[3] = "azul";
    v[4] = "branco";
    v[5] = "roxo";
    cout << "Busca por cor" << endl;
    cout << "Qual cor deseja?" << endl;
    cin >> n;

    if(v[3] == n || v[1] == n){
        catalogoCamiseta();
    }else if(v[5] == n|| v[2] == n){
        catalogoCalcas();
    }else if(v[4] == n || v[0] == n){
        catalogoCalcao();
    }
}

int menu(){
    int pagamento;
    int escolha;
    bool validade = false;
    system("clear||cls");

    cout << "Bem Vindo a 4 ootd's" << endl;
    cout << "1. Cadastrar novo usuario" << endl;
    cout << "2. Ver catalogo" << endl;
    cout << "3. Buscar" << endl;
    cout << "4. Sair" << endl;

    while(validade == false){

        cin >> escolha;
        if(escolha == 1){
            validade = true;
            escolha = 0;
            cadastro();
            menu();
        }else if(escolha == 2){
            if(login == 1){
                validade = true;
                escolha = 0;
                catalogo();
            }else{
                int verifica;
                system("clear||cls");
                cout << "Voce precisa ser cadastrado para ver e comprar produtos" << endl;
                cout << "Cadsatrar?" << endl;
                cout << "1. SIM" << endl;
                cout << "2. NAO" << endl;
                cin >> verifica;
                if(verifica == 1){
                    cadastro();
                    menu();
                }else{
                    system("clear||cls");
                    cout << "obrigado por visitar a 4 ootd's";
                    Sleep(5000);
                    return 0;
                }
            }

        }else if(escolha == 3){
            buscar();
        }else if(escolha == 4){
            system("clear||cls");
            cout << "obrigado por visitar a 4 ootd's";
            Sleep(5000);
            return 0;
        }else{
            system("clear||cls");
            cout << "Numero invalido" << endl << "Selecione novamente:" << endl;
            cout << "1. Cadastrar novo usuario" << endl;
            cout << "2. Ver catalogo" << endl;
            cout << "3. Pedir uma peca que nao esta no catalogo" << endl;
            cout << "4. Sair" << endl;
        }
    }
    return 0;
}

int main(){
    menu();
    return 0;
}
